rules_version = '2';

// By default, allow read/write access only to authenticated users
// This is a common starting point.
service firebase.storage {
  match /b/{bucket}/o {
    // Match any file in the root and subdirectories
    match /{allPaths=**} {
      // By default, deny all reads and writes
      allow read, write: if false;
    }
    
    // Allow users to read and write to their own profile pictures directory
    match /profile-pictures/{userId}/{allPaths=**} {
      // Anyone can read profile pictures
      allow read: if true;
      // Only the authenticated user can write to their own directory
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow anyone to read anime cover images
    match /anime-covers/{allPaths=**} {
        allow read: if true;
    }
  }
}
